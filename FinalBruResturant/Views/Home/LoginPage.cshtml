@using FinalBruResturant.Models
@model FinalBruResturant.Models.Login
@{
    ViewBag.Title = "LoginPage";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
</head>
<body>
    <br /><br />
    <div class="panel panel-primary">
        <div class="panel-heading text-center"><h4>Login</h4></div>
        <div class="panel-body">
            @if(ViewBag.currentUser == "wrongCredentials")
            {
                <p style="color:red;">Your username and/or password is incorrect</p>
            }

            @if (ViewBag.message == "notSignedIn")
            {
                <p style="color:red;">You must be signed in to reserve a table</p>
            }

            @using (Html.BeginForm("LoginPage", "Home", FormMethod.Post))
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Username", "Username:")<br />
                    @Html.TextBox("Username", null, new { @class = "form-control" })
                </div>
                    <div class="form-group">
                        @Html.Label("Password", "Password:")<br />
                        @Html.TextBox("Password", null, new { @class = "form-control", @type = "password" })
                    </div>
                    <div>
                        <button class="btn btn-primary" name="submit" value="true" type="submit">Login</button>
                    </div>
            }
            @Html.ActionLink("Create New Profile", "CreateProfilePage", "Home", null, null)
        </div>
    </div>
</body>
</html>





