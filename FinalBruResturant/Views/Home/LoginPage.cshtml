@using FinalBruResturant.Models
@model FinalBruResturant.Models.Login
@{
    ViewBag.Title = "LoginPage";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Css/StyleSheet1.css" />
    <link rel="stylesheet" href="~/Css/ReservationStyle.css" />
    <link rel="stylesheet" href="~/Css/CreateProfile.css" />
    <link rel="stylesheet" href="~/Css/ActionLink.css" />
    <script type="text/javascript" src="~/Scripts/menu.js"></script>
</head>
+
<body class="backgroundView">
    <div id="left"></div>
    <div id="right"></div>
    <div id="top"></div>
    <div id="bottom"></div>
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        @Html.ActionLink("Home", "MainPage", "Home", null, null)
        @Html.ActionLink("About", "About", "Home", null, null)
        @Html.ActionLink("Reserve", "ReservationsPage", "Home", null, null)
        @Html.ActionLink("Login", "LoginPage", "Home", null, null)
    </div>
    <div id="main">
        <span style="font-size:40px;cursor:pointer; color:white;" onclick="openNav()">&#9776;</span>
    </div>
    <div class="panel headerColor">
        <div class="panel-heading text-center"><h4 class="headerText">Create New Profile</h4></div>
        <div class="panel-body body-placement">
            <!--If the username and/or password is incorrect-->
            @if(ViewBag.currentUser == "wrongCredentials")
            {
                <p style="color:red;">Your username and/or password is incorrect</p>
            }
            <!--If the user is not signed in they can not reserve a table-->
            @if (ViewBag.message == "notSignedIn")
            {
                <p style="color:red;">You must be signed in to reserve a table</p>
            }

            @using (Html.BeginForm("LoginPage", "Home", FormMethod.Post))
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Username", "Username:")<br />
                    @Html.TextBox("Username", null, new { @class = "custom-input" })
                </div>
                <div class="form-group">
                    @Html.Label("Password", "Password:")<br />
                    @Html.TextBox("Password", null, new { @class = "custom-input", @type = "password" })
                </div>
                    <div>
                        <button class="btn-lg btn-primary" name="submit" value="true" type="submit">Login</button>
                    </div>
            }
            @Html.ActionLink("Create New Profile", "CreateProfilePage", "Home", null, new { @class = "hyper-link-custom" })
        </div>
    </div>
</body>
</html>





