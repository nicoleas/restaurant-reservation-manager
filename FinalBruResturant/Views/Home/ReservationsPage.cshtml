@using FinalBruResturant.Models
@model FinalBruResturant.Models.ReservationModel
@{
    ViewBag.Title = "ReservationsPage";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reserve a Table</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Css/StyleSheet1.css" />
    <link rel="stylesheet" href="~/Css/ReservationStyle.css" />
    <script type="text/javascript" src="~/Scripts/menu.js"></script>
</head>
    <body class="backgroundView">
        <div id="left"></div>
        <div id="right"></div>
        <div id="top"></div>
        <div id="bottom"></div>

        <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            @Html.ActionLink("Home", "MainPage", "Home", null, null)
            @Html.ActionLink("About", "About", "Home", null, null)
            <a href="#">Services</a>
            @Html.ActionLink("Reserve", "ReservationsPage", "Home", null, null)
            <a href="#">Contact</a>
        </div>

        <div id="main">
            <span style="font-size:40px;cursor:pointer; color:white;" onclick="openNav()">&#9776;</span>
        </div>
        <div class="panel headerColor">
            <div class="panel-heading text-center"><h4 class="headerText">Reserve a Table</h4></div>
            <div class="row panel-body">
                <div class="borderSurround">
                    <div class="col-md-6 d panel-default spacing">
                        <div class="panel-heading"><h4>Reserve as Guest</h4></div>
                        @using (Html.BeginForm())
                         {
                            @Html.ValidationSummary(false, "", new { @class = "custom-validation-summary" })
                            <div class="form-group">
                                @Html.Label("Name", "Name:")<br />
                                @Html.TextBox("Name", null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.Label("DateTime", "Date and Time:")<br />
                                @Html.TextBox("DateTime", null, new { @id = "datetime", @class = "form-control", @type = "datetime-local" })
                            </div>
                            <div class="form-group">
                                @Html.Label("NumPeople", "Number of People:")<br />
                                @Html.TextBox("NumPeople", null, new { @class = "form-control", @type = "number", @min = "1", @max = "16" })

                                @Html.Label("Info", "For tables larger than 16 persons please contact the resturant directly.")
                            </div>
                            <div>
                                <button class="btn-lg btn-primary" name="submit" value="true" type="submit">Make Reservation</button>
                            </div>
                         }
                    </div>
                </div>
                <div class="col-md-6 d panel-default ">
                    <div class="panel-heading"><h4>Login to Reserve</h4></div>
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(false, "", new {@class= "custom-validation-summary" })
                        <div class="form-group">
                            @Html.Label("Username", "Username:")<br />
                            @Html.TextBox("Username", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Password", "Password:")<br />
                            @Html.TextBox("Password", null, new { @class = "form-control", @type = "password" })
                        </div>
                        @Html.ActionLink("Create New Profile", "CreateProfilePage", "Home", null, null)
                    }
                </div>
            </div>
        </div>
    </body>
</html>